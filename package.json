{
    "name": "nodejs-typescript-template",
    "version": "1.1.0",
    "description": "A template for a nodejs application, using typescript",
    "main": "dist/src/index.js",
    "author": "",
    "license": "MIT",
    "scripts": {
        "dev": "nodemon --watch src/**/*.ts --exec ts-node ./src/app.ts",
        "build": "tsc",
        "start": "node ./dist/app.js",
        "lint": "eslint --fix --quiet src/**/*.ts",
        "prettier": "prettier --loglevel silent --write src/**/*.ts",
        "unit": "jest",
        "unit:watch": "jest --watch",
        "unit:coverage": "jest --coverage",
        "prepush": "yarn prettier && git diff HEAD --quiet"
    },
    "dependencies": {
        "dotenv": "^16.0.3"
    },
    "devDependencies": {
        "@types/dotenv": "^8.2.0",
        "@types/jest": "^29.4.2",
        "@types/node": "^18.15.3",
        "@typescript-eslint/eslint-plugin": "^5.55.0",
        "@typescript-eslint/parser": "^5.55.0",
        "eslint": "^8.36.0",
        "eslint-config-prettier": "^8.7.0",
        "eslint-plugin-prettier": "^4.2.1",
        "jest": "^29.5.0",
        "nodemon": "^2.0.21",
        "prettier": "^2.8.4",
        "ts-jest": "^29.0.5",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.5",
        "typescript-eslint-parser": "^22.0.0"
    }
}
